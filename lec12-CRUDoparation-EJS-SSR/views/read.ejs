<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- tailwind cdn -->
   <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="h-full w-full text-white p-10">
        <h1 class="text-3xl font-bold mb-5">All users</h1>

       <div class="users flex flex-wrap gap-5">
            <% if(users.length > 0) { %>
                <% users.forEach(user => { %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-40 rounded-lg bg-zinc-700">
                        <img src="<%= user.image %>" alt="user image" class="w-full h-full object-cover rounded-lg">
                    </div>

                    <h2 class="text-xl font-semibold mt-4"><%= user.name %></h2>
                    <h5 class="text-zinc-400"><%= user.email %></h5>

                    <div class="flex justify-between mt-4">
                        <a class="bg-blue-500 text-white px-4 py-2 rounded-lg cursor-pointer">Edit</a>

                        <a href="/delete/<%= user._id %>" class="bg-red-500 text-white px-4 py-2 rounded-lg cursor-pointer">Delete</a>
                    </div>
                </div>
            <% }) %>
            <% } else { %>
                <p class="text-zinc-400">No users yet</p>
            <% } %>

       </div>


        <div class="mt-3"> 
            <a href="/" class="text-amber-500">back to home</a>
        </div>
    </div>
</body>
</html>