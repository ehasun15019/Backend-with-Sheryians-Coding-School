<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- tailwind css cdn -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
      <div class="from p-10 rounded-md">
        <form action="/create" method="post" class="bg-zinc-700 p-8">
          <input
            class="block px-4 py-2 mt-2 bg-zinc-800 focus:outline-none border border-amber-100 w-full rounded-md"
            type="text"
            placeholder="Title goes here"
            name="title"
          />

          <textarea
            class="block px-4 py-2 resize-none mt-3 bg-zinc-800 focus:outline-none border border-amber-100 w-full rounded-md"
            placeholder="Write your task details"
            name="details"
          ></textarea>

          <input
            class="mt-2 bg-amber-600 px-5 py-2 rounded cursor-pointer"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>

       <div class="tasks p-10 flex flex-wrap gap-4">
            <% if (files.length > 0) { %>
                <% files.forEach((value) => { %>
                <div class="task w-72 px-3 rounded-lg py-4 bg-zinc-800">
                    <h1 class="text-3xl tracking-tighter"><%= value %></h1>
                    <a href="/file/<%= value %>" class="text-blue-600 inline-block mt-3">Read More</a>
                </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-red-900">No task here</h3>
            <% } %>
        </div>
    </div>
  </body>
</html>
